{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location":{
            "type":"string",
            "defaultValue": "centralus",
            "allowedValues": [
                "Brazil South",
                "brazilsouth",
                "East Asia",
                "eastasia",
                "East US",
                "eastus",
                "Japan East",
                "japaneast",
                "Japan West",
                "japanwest",
                "North Central US",
                "northcentralus",
                "North Europe",
                "northeurope",
                "South Central US",
                "southcentralus",
                "West Europe",
                "westeurope",
                "West US",
                "westus",
                "Southeast Asia",
                "southeastasia",
                "Central US",
                "centralus",
                "East US 2",
                "eastus2"
            ],
            "metadata": {
                "description":"location"
            }
        },
        "publicIpAddressName":{
            "type":"string",
            "defaultValue":"",
            "metadata":{
                "description":"publicIPAddress name for the resourceGroups"
            }
        },
        "publicIpAddressType":{
            "type":"string",
            "defaultValue":"",
            "metadata":{
                "description":"publicIpAddressType"
            }
        },
        "tag": {
            "type": "object",
            "defaultValue": {
                "key1": "key",
                "value1": "value"
            },
            "metadata": {
                "description": "Tag Values"
            }
        },
        "networkApiVersion":{
            "type":"string",
            "defaultValue":"2016-09-01",
            "metadata":{
                "description":"networkApiVersion"
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "name": "[parameters('publicIpAddressName')]",
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "[parameters('networkApiVersion')]",
            "location": "[parameters('location')]",
             "tags": {
                "[parameters('tag').key1]": "[parameters('tag').value1]"
            },
            "properties": {
                "publicIpAllocationMethod": "[parameters('publicIpAddressType')]"
            }
        }
    ]
}
