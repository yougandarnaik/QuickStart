{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "centralus",
            "allowedValues": [
                "Brazil South",
                "brazilsouth",
                "East Asia",
                "eastasia",
                "East US",
                "eastus",
                "Japan East",
                "japaneast",
                "Japan West",
                "japanwest",
                "North Central US",
                "northcentralus",
                "North Europe",
                "northeurope",
                "South Central US",
                "southcentralus",
                "West Europe",
                "westeurope",
                "West US",
                "westus",
                "Southeast Asia",
                "southeastasia",
                "Central US",
                "centralus",
                "East US 2",
                "eastus2"
            ],
            "metadata": {
                "description":"storage account location"
            }
        },
        "virtualMachineName":{
            "type": "string",
            "defaultValue": "hortonworks",
            "metadata": {
                "description":"virtualMachine Name"
            }
        },
        "networkInterfaceName":{
            "type": "string",
            "defaultValue": "hortonworks613",
            "metadata": {
                "description":"networkInterface Name"
            }
        },
        "storageAccountName":{
            "type": "string",
            "defaultValue": "testhdisks",
            "metadata": {
                "description":"storageAccount Name"
            }
        },
        "adminUsername":{
            "type": "string",
            "defaultValue": "hortonworks",
            "metadata": {
                "description":"adminUserName"
            }
        },
        "adminPassword":{
            "type": "securestring",
            "defaultValue": "Hortonworks@123",
            "metadata": {
                "description":"adminPassword"
            }
        },
        "virtualMachineSize":{
            "type": "securestring",
            "defaultValue": "Standard_DS1_v2",
            "metadata": {
                "description":"virtualMachineSize"
            }
        },
        "imagePublisher":{
            "type": "securestring",
            "defaultValue": "hortonworks",
            "metadata": {
                "description":"imagePublisher"
            }
        },
        "imageOffer":{
            "type": "securestring",
            "defaultValue": "hortonworks-sandbox",
            "metadata": {
                "description":"imageOffer"
            }
        },
        "imageSKU":{
            "type": "securestring",
            "defaultValue": "sandbox25",
            "metadata": {
                "description":"imageSKU"
            }
        },
        "imageVersion":{
            "type": "securestring",
            "defaultValue": "latest",
            "metadata": {
                "description":"imageVersion"
            }
        }
    },
     "variables": {
    },
    "resources": [
           {
            "name": "[parameters('virtualMachineName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2016-04-30-preview",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', parameters('networkInterfaceName'))]",
                "[concat('Microsoft.Storage/storageAccounts/', parameters('storageAccountName'))]"
            ],
            "properties": {
                "osProfile": {
                    "computerName": "[parameters('virtualMachineName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[parameters('imagePublisher')]",
                        "offer": "[parameters('imageOffer')]",
                        "sku": "[parameters('imageSKU')]",
                        "version": "[parameters('imageVersion')]"
                    },
                    "osDisk": {
                        "name": "[parameters('virtualMachineName')]",
                        "createOption": "fromImage",
                        "vhd": {
                            "uri": "[concat(concat(reference(resourceId('ynaik-test-h', 'Microsoft.Storage/storageAccounts', parameters('storageAccountName')), '2015-06-15').primaryEndpoints['blob'], 'vhds/'), parameters('virtualMachineName'), '20170316151133.vhd')]"
                        }
                    },
                    "dataDisks": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('networkInterfaceName'))]"
                        }
                    ]
                }
            },
            "plan": {
                "name":  "[parameters('imageSKU')]",
                "publisher":"[parameters('imagePublisher')]",
                "product": "[parameters('imageOffer')]"
            }
        }     
    ]
}
