{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "centralus",
            "allowedValues": [
                "Brazil South",
                "brazilsouth",
                "East Asia",
                "eastasia",
                "East US",
                "eastus",
                "Japan East",
                "japaneast",
                "Japan West",
                "japanwest",
                "North Central US",
                "northcentralus",
                "North Europe",
                "northeurope",
                "South Central US",
                "southcentralus",
                "West Europe",
                "westeurope",
                "West US",
                "westus",
                "Southeast Asia",
                "southeastasia",
                "Central US",
                "centralus",
                "East US 2",
                "eastus2"
            ],
            "metadata": {
                "description":"location"
            }
        },
        "networkApiVersion":{
            "type": "string",
            "defaultValue": "2016-09-01",
            "metadata": {
                "description":"API Version for the Network Resources"
            }
        },
        "virtualNetworkName":{
            "type": "string",
            "defaultValue": "test-h-vnet",
            "metadata": {
                "description":"virtualNetwork Name"
            }
        },
        "addressPrefix":{
            "type": "string",
            "defaultValue": "172.16.2.0/24",
            "metadata": {
                "description":"address Prefix"
            }
        },
        "subnetName":{
            "type": "string",
            "defaultValue": "test-h-subnet",
            "metadata": {
                "description":"subnet Name"
            }
        },
        "subnetPrefix":{
            "type": "string",
            "defaultValue": "172.16.2.0/24",
            "metadata": {
                "description":"subnet Prefix"
            }
        },
        "tag":{
            "type": "object",
            "defaultValue": {
                "key1":"key",
                "value1":"value"
            },
            "metadata": {
                "description":"tag"
            }
        }
    },
     "variables": {
    },
    "resources": [
       {
            "name": "[parameters('virtualNetworkName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "[parameters('networkApiVersion')]",
            "location": "[parameters('location')]",
            "tags": { 
                    "[parameters('tag').key1]": "[parameters('tag').value1]" 
             }, 
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('addressPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('subnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetPrefix')]"
                        }
                    }
                ]
            }
        }
    ]
}
